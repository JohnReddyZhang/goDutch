<% include ./partials/header %>

<!--Custom Stylesheet for browsing restaurant page-->
<link href="assets/css/restaurant-list.min.css" rel="stylesheet">


<header class="text-center text-white d-flex">
    <div class="container my-auto">
        <div class="row jumbotron">
            <div class="col-lg-8 mx-auto">
                <p class="img-fluid mb-5"><img src="img/goDutch.png" align=center width=300px></p>
            </div>
            <div class="col-lg-10 mx-auto">
                <h1 class="text-uppercase">
                    <strong>Our Participating Restaurants</strong>
                </h1>
                <br>
            </div>
            <div class="col-lg-8 mx-auto">
                <!--<h4 class="text-uppercase">-->
                <!--<strong>Point of Sale Reimagined</strong>-->
                <!--</h4>-->
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#restaurant-list">View Our Restaurants</a>
            </div>
        </div>
    </div>
</header>

<div class="container-fluid">
    <div class="container p-0" id="restaurant-list">
        <section class="p-0 container-fluid">
            <!--<div class="container-fluid p-0">-->
                <div class="row no-gutters">
                    <% restaurants.forEach(function (restaurant){ %>
                    <div class="col-lg-4 col-sm-6 p-1">
                        <!--TODO: Link to the target restaurant, not new-->
                        <a class="restaurant-box" href="/restaurants/<%= restaurant._id %>">
                            <img class="img-fluid" src="img/portfolio/thumbnails/chicago.png" alt="">
                            <div class="restaurant-box-caption">
                                <div class="restaurant-box-caption-content">
                                    <div class="project-name">
                                        <%= restaurant.name %>
                                    </div>
                                    <div class="project-category text-faded">
                                        <%= restaurant.address %>
                                    </div>
                                    <div class="project-category text-faded">
                                        <%= restaurant.rating %>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }) %>
                </div>
            <!--</div>-->
        </section>
        <hr>
        <section class="bg-primary">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto text-center">
                        <!--<h2 class="section-heading text-white">goDutch's got what you need!</h2>-->
                        <!--<hr class="light my-4">-->
                        <a class="btn btn-light btn-xl js-scroll-trigger" href="/restaurants/join">Join Us</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>


<!-- Bootstrap core JavaScript -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Plugin JavaScript -->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="vendor/scrollreveal/scrollreveal.min.js"></script>
<script src="vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

<!-- Custom scripts for this template -->
<script src="js/creative.min.js"></script>

<% include ./partials/footer %>